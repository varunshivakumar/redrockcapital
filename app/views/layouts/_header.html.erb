<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to raw('<span style="color: red;">Red</span>Rock Capital'), root_path, id: "logo", style: "text-transform: none;" %>
      <nav>
        <ul class="nav pull-right">

          <li><%= link_to "Home", root_path %></li>
          <% unless current_user.nil? || current_user.is_employee%><li><%= link_to "Orders", clients_orders_path(current_user) %></li><% end %>
          <li><%= link_to "Stocks", stocks_path %></li>
          <% if true %><li><%= link_to "Users", users_path %></li><% end %>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Help", help_path %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>